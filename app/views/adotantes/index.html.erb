<p id="notice"><%= notice %></p>

<h1>Adotantes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Pedido oracao</th>
      <th>Marcou comprometimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adotantes.each do |adotante| %>
      <tr>
        <td><%= adotante.nome %></td>
        <td><%= adotante.estado %></td>
        <td><%= adotante.email %></td>
        <td><%= adotante.telefone %></td>
        <td><%= adotante.pedido_oracao %></td>
        <td><%= adotante.marcou_comprometimento %></td>
        <td><%= link_to 'Show', adotante %></td>
        <td><%= link_to 'Edit', edit_adotante_path(adotante) %></td>
        <td><%= link_to 'Destroy', adotante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

